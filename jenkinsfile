pipeline {
    agent any 

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image using the Dockerfile in the current directory
                    def image = docker.build("python_app_image:${env.BUILD_ID}", ".")
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Run the Docker image as a container
                    def image = "python_app_image:${env.BUILD_ID}"
                    docker.image(image).run('-d --name my_python_app')
                }
            }
        }
    }
}

